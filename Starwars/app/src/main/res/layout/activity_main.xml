<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.angela.starwars.main.MainActivity"
    android:background="@color/White"
    >

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="@string/welcomeMessage"
        android:textColor="@color/FireBrick"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <ImageView
        android:id="@+id/WelcomeDarkVaderImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="174dp"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="true"
        android:cropToPadding="false"
        android:padding="50dp"
        android:src="@drawable/img_welcome_darkvader" />

    <ImageView
        android:id="@+id/StarWarsImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:padding="50dp"
        android:src="@drawable/img_welcome_starwars" />

    <Button
        android:id="@+id/accessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/StarWarsImageView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_btn"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/accessButtonText"
        android:textColor="@color/FireBrick"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:visibility="visible" />


</RelativeLayout>
